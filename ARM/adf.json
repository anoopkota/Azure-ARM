{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "resources": [
        {
            "type": "Microsoft.DataFactory/factories",
            "apiVersion": "2018-06-01",
            "name": "yourDataFactoryName",
            "location": "East US",  // Change to your desired location
            "properties": {
                "publicNetworkAccess": "Disabled",
                "dataLakeStorageLinkedService": {
                    "referenceName": "yourDataLakeLinkedServiceName",  // Link to your Azure Data Lake Storage Gen2 linked service
                    "type": "LinkedServiceReference"
                }
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2021-05-01",
            "name": "yourPrivateEndpointName",
            "location": "East US",  // Change to your desired location
            "dependsOn": [
                "[resourceId('Microsoft.DataFactory/factories', 'yourDataFactoryName')]"
            ],
            "properties": {
                "subnet": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'yourVNetName', 'yourSubnetName')]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "privateLinkServiceConnectionName",
                        "privateLinkServiceConnectionState": {
                            "status": "Approved",
                            "description": "Approved by manual intervention"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}
