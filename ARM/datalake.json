{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('storageAccountSku')]",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "supportsHttpsTrafficOnly": true
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2020-11-01",
            "name": "[parameters('privateEndpointName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {
                "privateLinkServiceConnections": [
                    {
                        "name": "privatelinkstorage",
                        "properties": {
                            "privateLinkServiceConnectionState": {
                                "status": "Enabled",
                                "description": "Private endpoint connection is enabled"
                            },
                            "groupIds": []
                        }
                    }
                ],
                "subnet": {
                    "id": "[parameters('subnetId')]"
                }
            }
        }
    ],
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Storage Account"
            }
        },
        "storageAccountSku": {
            "type": "string",
            "metadata": {
                "description": "Sku of the Storage Account (e.g., Standard_LRS)"
            }
        },
        "privateEndpointName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Private Endpoint"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location/region for the resources"
            }
        },
        "subnetId": {
            "type": "string",
            "metadata": {
                "description": "ID of the subnet where the Private Endpoint should be placed"
            }
        }
    },
    "outputs": {}
}
